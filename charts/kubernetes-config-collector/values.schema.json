{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "required": [
    "shinobi",
    "image",
    "serviceAccount"
  ],
  "properties": {
    "shinobi": {
      "type": "object",
      "title": "Shinobi Collector Configuration",
      "required": [
        "api_key",
        "endpoint"
      ],
      "properties": {
        "api_key": {
          "type": [
            "string"
          ],
          "title": "Shinobi API key"
        },
        "endpoint": {
          "type": [
            "string"
          ],
          "title": "Shinobi HTTPS Endpoint"
        }
      }
    },
    "cluster_name": {
      "type": [
        "string"
      ],
      "title": "Name used to identify this cluster"
    },
    "image": {
      "type": "object",
      "title": "Image Configuration",
      "required": [
        "repository",
        "tag"
      ],
      "properties": {
        "repository": {
          "type": [
            "string"
          ],
          "title": "repository/image to use"
        },
        "tag": {
          "type": [
            "string"
          ],
          "title": "Tag of the image to use",
          "default": ""
        },
        "pullPolicy": {
          "type": [
            "string"
          ],
          "title": "Pull policy for the image",
          "default": "IfNotPresent"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "title": "Service Account Configuration",
      "required": [
        "create"
      ],
      "properties": {
        "create": {
          "type": [
            "boolean"
          ],
          "title": "Create a service account for the collector"
        },
        "name": {
          "type": [
            "string"
          ],
          "title": "Name of the service account to create"
        },
        "annotations": {
          "type": "object",
          "title": "Annotations for the service account"
        }
      }
    }
  }
}